{
  "title": "StudioOS API Health",
  "schemaVersion": 39,
  "version": 1,
  "timezone": "browser",
  "panels": [
    {
      "type": "timeseries",
      "title": "API Availability",
      "targets": [
        { "expr": "100 * (1 - (studioos_http_errors_total / clamp_min(studioos_http_requests_total, 1)))", "legendFormat": "availability %" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "API Read p95 (ms)",
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(studioos_api_read_latency_ms_bucket[5m])) by (le))", "legendFormat": "read p95" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "API Write p95 (ms)",
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(studioos_api_write_latency_ms_bucket[5m])) by (le))", "legendFormat": "write p95" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    }
  ]
}
