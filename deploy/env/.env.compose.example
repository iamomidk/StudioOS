# Copy to deploy/env/.env.compose on VM and fill values.

# Deployment reference injected by deploy script.
DEPLOY_REF=replace-with-git-sha

# Public routing
APP_DOMAIN=app.example.com
API_DOMAIN=api.example.com
TLS_EMAIL=ops@example.com
VM_PUBLIC_IP=0.0.0.0

# Public URLs for smoke checks
PUBLIC_WEB_URL=https://app.example.com
PUBLIC_API_URL=https://api.example.com
NEXT_PUBLIC_API_BASE_URL=https://api.example.com
INTERNAL_API_BASE_URL=http://api:3000

# Database / cache primitives
POSTGRES_DB=studioos
POSTGRES_USER=studioos
POSTGRES_PASSWORD=change-me-postgres-password
DATABASE_URL=postgresql://studioos:change-me-postgres-password@postgres:5432/studioos
REDIS_URL=redis://redis:6379

# Auth secrets
JWT_ACCESS_TOKEN_SECRET=change-me-access-secret
JWT_REFRESH_TOKEN_SECRET=change-me-refresh-secret

# Smoke user and org
SMOKE_USER_EMAIL=smoke-user@example.com
SMOKE_USER_PASSWORD=change-me-smoke-password
SMOKE_ORG_ID=org_smoke_123
SMOKE_TIMEOUT_SECONDS=300

# Token for smoke-only health helper endpoints
SMOKE_OPS_ENABLED=true
SMOKE_CHECK_TOKEN=change-me-smoke-token

# CORS for browser clients
CORS_ALLOWED_ORIGINS=https://app.example.com

# MVP hard-disable toggles
MVP_MODE=true
ENABLE_ADVANCED=false
FEATURE_MARKETPLACE_ENABLED=false
FEATURE_DISPUTES_ENABLED=false
FEATURE_PUBLIC_LAUNCH_ENABLED=false
FEATURE_PRICING_EXPERIMENTS_ENABLED=false
FEATURE_SUPPORT_ADMIN_ACTIONS_ENABLED=false
PUBLIC_MODULES_GLOBAL_KILL_SWITCH=true

# Optional profile placeholders
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-me-minio-password
